# Database
MONGODB_URI=mongodb://localhost:27017/echoes

# JWT Secret
JWT_SECRET=your-super-secret-jwt-key-here

# Server Port
PORT=8080

# OpenAI API Key (optional - if you have paid access)
OPENAI_API_KEY=your-openai-api-key-here

# FREE AI SERVICE API KEYS (Recommended alternatives)

# Groq - Get free API key from https://console.groq.com/
# Offers free tier with Llama 3 models - Very fast and reliable
GROQ_API_KEY=your_groq_api_key

# Together.ai - Get free API key from https://api.together.xyz/
# Offers free tier with various open-source models
TOGETHER_API_KEY=your_together_api_key

# HuggingFace - Optional, for HF Inference API
HUGGINGFACE_API_KEY=your_huggingface_api_key

# Frontend URL (for CORS in production)
FRONTEND_URL=http://localhost:3000

# Node Environment
NODE_ENV=development
